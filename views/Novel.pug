extends layout

block content
  h1= title
  - const items = results;
  .container-fluid
    .row
      each Novel,index in items
        div(class="col-sm-2" onclick=`buy(${index})`)
          h3 #{Novel.Novel_type}
          p Color: #{Novel.size}
          p Year: #{Novel.cost}
  
  script.
    function buy(index) {
        alert(`You purchased : ${index}`)
    }